<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="screen">

    <PreferenceCategory
        android:title="@string/general"
        android:key="category_general"
        android:order="1">

        <SimpleMenuPreference
            android:key="search_engine_preference"
            android:title="@string/search_engine"
            android:summary="%s"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="setting_each_time"
            android:title="@string/setting_each_time"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="resize_image"
            android:title="@string/resize_image"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="notification_result"
            android:title="结果通知"
            android:summary="后台运行时当搜索完成时显示一条通知而不是直接打开结果"/>

        <SimpleMenuPreference
            android:defaultValue="2"
            android:key="show_result_in"
            android:title="@string/show_result_in"
            android:summary="%s"
            android:entries="@array/open_with"
            android:entryValues="@array/open_with_value"/>

    </PreferenceCategory>

</PreferenceScreen>